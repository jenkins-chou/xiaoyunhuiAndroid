<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baseLayoutColor"
    tools:context=".activity.RefereeAuthctivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:textColor="#666666"
            android:text="成为裁判员"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout><!--header-->
    <ScrollView
        android:layout_below="@+id/header"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="真实姓名"
                    android:textStyle="bold"
                    android:textColor="@color/baseFontColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:hint="请输入"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/activity_create_match_eidttext_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="获奖情况"
                    android:textStyle="bold"
                    android:textColor="@color/baseFontColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:hint="请输入"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/activity_create_match_eidttext_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="过往经历"
                    android:textStyle="bold"
                    android:textColor="@color/baseFontColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:hint="请输入"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/activity_create_match_eidttext_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="裁判组别"
                    android:textStyle="bold"
                    android:textColor="@color/baseFontColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:hint="请输入"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/activity_create_match_eidttext_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="想成为裁判的原因"
                    android:textStyle="bold"
                    android:textColor="@color/baseFontColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:hint="请输入"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/activity_create_match_eidttext_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/footer"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:layout_alignParentBottom="true"
        android:text="提交申请"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>